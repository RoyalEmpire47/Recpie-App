<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SearchResult">

    <TextView
        android:id="@+id/txtJustMatch"
        android:text="Best Match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/searchListView1"
        android:layout_below="@id/txtJustMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txtBestMatch"
        android:text="Just Match"
        android:layout_below="@id/searchListView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/searchListView"
        android:layout_below="@id/txtBestMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>